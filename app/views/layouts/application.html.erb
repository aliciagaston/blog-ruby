<!DOCTYPE html>
<html>
  <head>
    <title>Untitled</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <nav class="navbar is-primary">
      <div class="navbar-brand">
        <%= link_to "Blog", root_path, :class => "navbar-item"%>
      </div>
      <div class="navbar-end">
        <% if user_signed_in? %>
          <div class="navbar-item">Logged in as <%= current_user.firstName %> <%= current_user.lastName %></div>
          <div class="navbar-item">
            <%= link_to 'Edit profile', edit_user_registration_path, :class => "button" %>
          </div>
          <div class="navbar-item">
            <%= link_to "Logout", destroy_user_session_path, method: :delete, :class => "button is-danger"  %>
          </div>

        <% else %>
          <%= link_to "Sign up", new_user_registration_path, :class => "navbar-item"  %>
          <%= link_to "Login", new_user_session_path, :class => "navbar-item"  %>
        <% end %>
      </div>
    </nav>
    <%= yield %>
    <% if notice %>
    <p class="alert alert-success"><%= notice %></p>
  <% end %>
  <% if alert %>
    <p class="alert alert-danger"><%= alert %></p>
  <% end %>
  </body>
</html>
