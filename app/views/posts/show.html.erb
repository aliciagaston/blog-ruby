<div class="post_image"><img src='<%= @post.file.large %>' /></div>

<div class="content">
  <div class="post_title">
    <h1 class="title is-1"><%= @post.title %></h1>
    <h2 class="subtitle"><%= @post.lead %></h2>
  </div>

  <div class="post_presentation">
    Post by <%= link_to @post.user.fullName, user_path(@post.user_id) %> at <%= @post.date %>
  </div>
  <div class="post_content">
    <div class="box">
      <%= @post.content %>
    </div>
  </div>

Content : <br/>
Author :

<%- if @post.user == current_user %>
  <%= link_to "Edit", edit_post_path(@post) %>
  <%= link_to "Delete", post_path(@post), method: :delete %>
<% end %>
<%= link_to "Back", :posts %>
</div>