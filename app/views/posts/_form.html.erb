<%= form_for @post do |f| %>
  <%= f.label :title %>
  <%= f.text_field :title %><br/>
  <%= f.label :lead %>
  <%= f.text_field :lead %><br/>
  <%= f.label :date %>
  <%= f.date_select :date %>
  <%= f.label :image %>
  <%= f.text_field :image %><br/>
  <%= f.label :content %>
  <%= f.text_field :content %>
  <%= f.submit "Save" %>
  <%- if @post.new_record? %>
    <%= link_to "Back", :posts %>
  <% end %>
<% end %>